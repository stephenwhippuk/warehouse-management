{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://warehouse-mgmt.example.com/schemas/v1/inventory-allocated-event.schema.json",
  "title": "InventoryAllocatedEvent",
  "description": "Event payload for inventory.allocated messages. Contains updated inventory state after an allocation.",
  "type": "object",
  "required": [
    "id",
    "productId",
    "warehouseId",
    "locationId",
    "quantity",
    "availableQuantity",
    "reservedQuantity",
    "allocatedQuantity",
    "action"
  ],
  "properties": {
    "id": {
      "$ref": "common.schema.json#/$defs/uuid",
      "description": "Inventory record identifier"
    },
    "productId": {
      "$ref": "common.schema.json#/$defs/uuid",
      "description": "Product identifier"
    },
    "warehouseId": {
      "$ref": "common.schema.json#/$defs/uuid",
      "description": "Warehouse identifier"
    },
    "locationId": {
      "$ref": "common.schema.json#/$defs/uuid",
      "description": "Storage location identifier"
    },
    "quantity": {
      "type": "integer",
      "minimum": 1,
      "description": "Quantity allocated in this operation"
    },
    "availableQuantity": {
      "type": "integer",
      "minimum": 0,
      "description": "New available quantity after allocation"
    },
    "reservedQuantity": {
      "type": "integer",
      "minimum": 0,
      "description": "New reserved quantity after allocation"
    },
    "allocatedQuantity": {
      "type": "integer",
      "minimum": 0,
      "description": "New allocated quantity after allocation"
    },
    "action": {
      "type": "string",
      "enum": ["allocate"],
      "description": "Inventory action that produced the event"
    }
  },
  "additionalProperties": true
}
