{
  "server": {
    "port": 8080,
    "host": "0.0.0.0",
    "maxConnections": 100,
    "maxThreads": 16
  },
  "database": {
    "connectionString": "postgresql://inventory_user:inventory_pass@localhost:5432/inventory_db",
    "poolSize": 10
  },
  "redis": {
    "connectionString": "redis://localhost:6379",
    "ttl": 3600
  },
  "logging": {
    "level": "info",
    "format": "json"
  },
  "inventory": {
    "lowStockThreshold": 10,
    "enableExpiryAlerts": true,
    "expiryWarningDays": 30
  },
  "api": {
    "version": "v1",
    "basePath": "/api/v1"
  }
}
