{
  "name": "ReleaseReservation",
  "version": "1.0",
  "uri": "/api/v1/inventory/{id}/release",
  "method": "POST",
  "basis": "InventoryManagementService.ReleaseReservation",
  "authentication": "ApiKey",
  "description": "Release a quantity from reservation",
  "parameters": [
    {
      "name": "id",
      "location": "Route",
      "type": "UUID",
      "required": true,
      "description": "Inventory record ID"
    },
    {
      "name": "request",
      "location": "Body",
      "type": "ReleaseReservationRequest",
      "required": true,
      "description": "Release details"
    }
  ],
  "responses": [
    {
      "status": 200,
      "type": "InventoryOperationResultDto",
      "description": "Release successful"
    },
    {
      "status": 400,
      "type": "ErrorDto",
      "description": "Invalid request parameters"
    },
    {
      "status": 404,
      "type": "ErrorDto",
      "description": "Inventory record not found"
    },
    {
      "status": 409,
      "type": "ErrorDto",
      "description": "Cannot release more than reserved quantity"
    },
    {
      "status": 401,
      "type": "ErrorDto",
      "description": "Unauthorized"
    },
    {
      "status": 500,
      "type": "ErrorDto",
      "description": "Internal server error"
    }
  ]
}
