{
  "name": "ListLocations",
  "version": "1.0",
  "uri": "/api/v1/locations",
  "method": "GET",
  "authentication": "ApiKey",
  "description": "List locations with optional filtering",
  "parameters": [
    {
      "name": "warehouseId",
      "location": "Query",
      "type": "UUID",
      "required": false,
      "description": "Filter by warehouse ID"
    },
    {
      "name": "status",
      "location": "Query",
      "type": "string",
      "required": false,
      "description": "Filter by status"
    },
    {
      "name": "type",
      "location": "Query",
      "type": "string",
      "required": false,
      "description": "Filter by location type"
    },
    {
      "name": "zone",
      "location": "Query",
      "type": "string",
      "required": false,
      "description": "Filter by zone"
    },
    {
      "name": "page",
      "location": "Query",
      "type": "PositiveInteger",
      "required": false,
      "description": "Page number (default: 1)"
    },
    {
      "name": "pageSize",
      "location": "Query",
      "type": "PositiveInteger",
      "required": false,
      "description": "Items per page (default: 50)"
    }
  ],
  "responses": [
    {
      "status": 200,
      "type": "LocationListDto",
      "description": "List of locations"
    },
    {
      "status": 401,
      "type": "ErrorDto",
      "description": "Unauthorized"
    },
    {
      "status": 500,
      "type": "ErrorDto",
      "description": "Internal server error"
    }
  ]
}
