{
  "name": "UpdateProductRequest",
  "version": "1.0",
  "type": "command",
  "commandType": "Update",
  "basis": ["Product"],
  "resultType": "ProductItemDto",
  "parameters": [
    {
      "name": "name",
      "type": "string",
      "required": true,
      "constraints": {
        "minLength": 1,
        "maxLength": 200
      }
    },
    {
      "name": "description",
      "type": "string",
      "required": false,
      "constraints": {
        "maxLength": 2000
      }
    },
    {
      "name": "category",
      "type": "string",
      "required": false,
      "constraints": {
        "maxLength": 100
      }
    },
    {
      "name": "status",
      "type": "string",
      "required": true,
      "enum": ["active", "inactive", "discontinued"]
    }
  ]
}
